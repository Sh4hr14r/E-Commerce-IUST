<h1 class="form_title">Reset Password</h1>
<div class="form">
    <%= form_tag password_resets_path, :method => :post do %>
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
        </div>
        <div class="actions">
          <%= submit_tag 'Reset Password' %>
        </div>
    <% end %>
</div>